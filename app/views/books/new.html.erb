<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to "Korisho_Novel", root_path %>
  </header>

  <div class="items-sell-main">
    <h2 class="items-sell-title">小説の概要を入力してください</h2>
    <%= form_with(model:@book, local: true) do |f| %>


    <%= render 'books/shared/error_messages', model: f.object %>

    <%# 小説名 %>
    <div class="new-items">
      <div class="weight-bold-text">
        小説のタイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :novel_title, class:"items-text", id:"novel_title", placeholder:"小説名（必須 40文字まで)", maxlength:"40" %>
    </div>
    <%# /小説名 %>

    <%# 小説の詳細 %>
    <div class="items-detail">
      <div class="weight-bold-text">小説の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          ジャンル
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="items-explain">
          <div class="weight-bold-text">
            あらすじ
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :synopsis, class:"items-text", id:"synopsis", placeholder:"小説のあらすじ（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
        </div>
      </div>
    </div>
    <%# /小説の詳細 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "作成する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to "Korisho_Novel", root_path %>
    <p class="inc">
      ©︎Korisho-Novel,Inc.
    </p>
  </footer>
</div>